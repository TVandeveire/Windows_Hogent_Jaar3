Rename-computer -newname DC1  
New-NetIPAddress -InterfaceAlias "Ethernet 2" -IPAddress "192.168.1.1" -AddressFamily IPv4 -PrefixLength 24
Install-WindowsFeature AD-Domain-Services -IncludeManagementTools
Install-ADDSForest -DomainName ROBDEC.gent -SafeModeAdministratorPassword Robin1  
Install-WindowsFeature DNS -IncludeManagementTools
Set-DnsClientServerAddress -InterfaceAlias Ethernet -ServerAddresses 172.0.0.1
Install-WindowsFeature DHCP -IncludeManagementTools  
Add-DhcpServerV4Scope -Name "DHCP Scope" -StartRange 192.168.1.50 -EndRange 192.168.1.100 -SubnetMask 255.255.255.0  
